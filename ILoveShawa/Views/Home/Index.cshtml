@model IEnumerable<ILoveShawa.Controllers.HomeController._ShawaShop>
@using System.Device.Location;
@using ILoveShawa.Controllers

@{
    ViewBag.Title = "Index";
    Random random = new Random();
}
<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <ul class="media-list shop-list">
            @foreach (var item in Model)
            {
                <li class="media shop-item" shop-id="@item.Id">
                    <div class="media-left">
                        <img class="media-object" src="http://lorempixel.com/64/64/food/@random.Next(10)" alt="..." width=64px>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">@item.Name</h4>
                        <p>Не доказано, что система координат поддерживает интеграл Пуассона. Непрерывная функция, как следует из вышесказанного</p>
                        <p>@item.Coord.ToString()</p>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="hidden-xs col-sm-8 col-md-8 col-lg-8">
        <div id="index-map">
        </div>
    </div>
</div>
